{
    "include": ["src/**/*.ts", "tests/**/*.ts"],
    "exclude": ["node_modules", "dist"],
    "compilerOptions": {
      "rootDirs": ["src"],
      "outDir": "dist",
      "lib": ["es2020"],
      "target": "es2020",
      "module": "commonjs",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "types": ["node"]
    }
}